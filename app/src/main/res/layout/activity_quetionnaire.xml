<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuetionnaireActivity"
  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="sans-serif-light"
        >

        <TextView
            android:id="@+id/heading02_tv"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:fontFamily="sans-serif-light"
            android:rotationY="0"
            android:text="How was the sleep last night?"
            android:textAllCaps="true"
            android:textSize="22sp"
            android:layout_marginBottom="15dp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:fontFamily="sans-serif-light">
                <TextView
                    android:id="@+id/sleepDuration_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sleep duration: "
                    android:fontFamily="sans-serif-light" />

                <TextView
                    android:id="@+id/duration_tv"
                    android:layout_width="137dp"
                    android:layout_height="39dp"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:textAlignment="center"
                    android:fontFamily="sans-serif-light"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/q1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Was it easy to fall asleep?"
            android:fontFamily="sans-serif-light" />

        <androidx.cardview.widget.CardView
            android:elevation="5dp"
            app:cardCornerRadius="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            >

            <RadioGroup
                android:id="@+id/radioGroupQ1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/emoSatisfied_q1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:onClick="onEmoSelected"
                    android:background="@drawable/emo_selector"
                    android:button="@drawable/ic_emo_satisfied"/>
                <RadioButton
                    android:id="@+id/emoSmile_q1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:onClick="onEmoSelected"
                    android:background="@drawable/emo_selector"
                    android:button="@drawable/ic_emo_smile"/>
                <RadioButton
                    android:id="@+id/emoNull_q1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:onClick="onEmoSelected"
                    android:background="@drawable/emo_selector"
                    android:button="@drawable/ic_emo_null"/>
                <RadioButton
                    android:id="@+id/emoGrimacing_q1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:onClick="onEmoSelected"
                    android:background="@drawable/emo_selector"
                    android:button="@drawable/ic_emo_grimacing"/>
                <RadioButton
                    android:id="@+id/emoDead_q1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:onClick="onEmoSelected"
                    android:background="@drawable/emo_selector"
                    android:button="@drawable/ic_emo_dead"/>


            </RadioGroup>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/q2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Overall feelings?"
            android:fontFamily="sans-serif-light" />

        <androidx.cardview.widget.CardView
            android:elevation="5dp"
            app:cardCornerRadius="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >

            <RadioGroup
                android:id="@+id/radioGroupQ2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/emoSatisfied_q2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:onClick="onEmoSelected2"
                    android:background="@drawable/emo_selector"
                    android:button="@drawable/ic_emo_satisfied"/>
                <RadioButton
                    android:id="@+id/emoSmile_q2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:onClick="onEmoSelected2"
                    android:background="@drawable/emo_selector"
                    android:button="@drawable/ic_emo_smile"/>
                <RadioButton
                    android:id="@+id/emoNull_q2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:onClick="onEmoSelected2"
                    android:background="@drawable/emo_selector"
                    android:button="@drawable/ic_emo_null"/>
                <RadioButton
                    android:id="@+id/emoGrimacing_q2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:onClick="onEmoSelected2"
                    android:background="@drawable/emo_selector"
                    android:button="@drawable/ic_emo_grimacing"/>
                <RadioButton
                    android:id="@+id/emoDead_q2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:onClick="onEmoSelected2"
                    android:background="@drawable/emo_selector"
                    android:button="@drawable/ic_emo_dead"/>


            </RadioGroup>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/q3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How many times did you wake up?"
                android:fontFamily="sans-serif-light"></TextView>


            <EditText
                android:id="@+id/editNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:textSize="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="times."
                android:fontFamily="sans-serif-light"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/q4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Medications?"
                android:fontFamily="sans-serif-light"></TextView>

            <RadioGroup
                android:id="@+id/radioGroupQ4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <RadioButton
                    android:id="@+id/q4No"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:padding="10dp"
                    android:fontFamily="sans-serif-light"
                    />
                <RadioButton
                    android:id="@+id/q4Yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:padding="10dp"
                    android:fontFamily="sans-serif-light"
                    />

            </RadioGroup>




        </LinearLayout>

        <Button
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/submitButton"
            android:fontFamily="sans-serif-light"/>


    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>