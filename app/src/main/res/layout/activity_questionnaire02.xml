<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".questionnaire02">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
       >

        <TextView
            android:id="@+id/heading02_tv"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:rotationY="0"
            android:text="How was the sleep last night?"
            android:textSize="24sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
        <TextView
            android:id="@+id/sleepDuration_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sleep duration: "
            android:textStyle="bold" />

                <TextView
                    android:id="@+id/duration_tv"
                    android:layout_width="137dp"
                    android:layout_height="39dp"
                    android:gravity="center_horizontal"
                    android:text="TextView"
                    android:textAlignment="center" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/q1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Was it easy to fall asleep?"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:elevation="5dp"
            app:cardCornerRadius="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >

        <RadioGroup
            android:id="@+id/radioGroupQ1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/emoSatisfied_q1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:onClick="onEmoSelected"
                android:background="@drawable/emo_selector"
                android:button="@drawable/ic_emo_satisfied"/>
            <RadioButton
                android:id="@+id/emoSmile_q1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:onClick="onEmoSelected"
                android:background="@drawable/emo_selector"
                android:button="@drawable/ic_emo_smile"/>
            <RadioButton
                android:id="@+id/emoNull_q1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:onClick="onEmoSelected"
                android:background="@drawable/emo_selector"
                android:button="@drawable/ic_emo_null"/>
            <RadioButton
                android:id="@+id/emoGrimacing_q1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:onClick="onEmoSelected"
                android:background="@drawable/emo_selector"
                android:button="@drawable/ic_emo_grimacing"/>
            <RadioButton
                android:id="@+id/emoDead_q1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:onClick="onEmoSelected"
                android:background="@drawable/emo_selector"
                android:button="@drawable/ic_emo_dead"/>


        </RadioGroup>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/q2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Overall feelings?"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:elevation="5dp"
            app:cardCornerRadius="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >

            <RadioGroup
                android:id="@+id/radioGroupQ2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/emoSatisfied_q2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:onClick="onEmoSelected2"
                    android:background="@drawable/emo_selector"
                    android:button="@drawable/ic_emo_satisfied"/>
                <RadioButton
                    android:id="@+id/emoSmile_q2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:onClick="onEmoSelected2"
                    android:background="@drawable/emo_selector"
                    android:button="@drawable/ic_emo_smile"/>
                <RadioButton
                    android:id="@+id/emoNull_q2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:onClick="onEmoSelected2"
                    android:background="@drawable/emo_selector"
                    android:button="@drawable/ic_emo_null"/>
                <RadioButton
                    android:id="@+id/emoGrimacing_q2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:onClick="onEmoSelected2"
                    android:background="@drawable/emo_selector"
                    android:button="@drawable/ic_emo_grimacing"/>
                <RadioButton
                    android:id="@+id/emoDead_q2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:onClick="onEmoSelected2"
                    android:background="@drawable/emo_selector"
                    android:button="@drawable/ic_emo_dead"/>


            </RadioGroup>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/q3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How many times did you wake up?"
                android:textStyle="bold"></TextView>


            <EditText
                android:id="@+id/editNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:text="entre a number"
                android:textSize="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="times."></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/q4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Medications?"
                android:textStyle="bold"></TextView>

            <RadioGroup
                android:id="@+id/radioGroupQ4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <RadioButton
                    android:id="@+id/q4No"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:padding="10dp"

                    />
                <RadioButton
                    android:id="@+id/q4Yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:padding="10dp"

                    />

            </RadioGroup>




        </LinearLayout>

        <Button
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_margin="20dp"/>


    </LinearLayout>




    <FrameLayout
        android:id="@+id/fl_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />
</androidx.constraintlayout.widget.ConstraintLayout>